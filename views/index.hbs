  <div class="form-container" style="margin: 20px; border: 1px solid black; border-radius : 7px">
    <h1 style="align:center;" class="mx-2 my-2">ADD NEW TASK</h1>
    <form class="" action="/create/?_method=POST" method="POST">
      <div class="form-group mx-10" style="margin: 20px">
        <label for="exampleFormControlInput1">Title</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="enter name" name="title">
      </div>





      <div class="form-group mx-10" style="margin: 20px">
        <label for="exampleFormControlTextarea1">Description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
      </div>

      <div class="form-group mx-10" style="margin: 20px">
        <label for="exampleFormControlInput1">due date</label>
        <input type="date" class="form-control" id="exampleFormControlInput2" placeholder="enter due date" name="due_date">
      </div>


      <div class="form-group mx-10" style="margin: 20px">
        <label for="exampleFormControlInput1">COMMENTS</label>
        <input type="text" class="form-control" id="exampleFormControlInput2" placeholder="enter due date" name="COMMENTS">
      </div>



      {{!-- <button type="submit" class="btn btn-link">SUBMIT</button> --}}
      <button type="submit" class="btn btn-primary mx-3 my-2 ">SUBMIT</button>
    </form>
  </div>

  <div class="accordion" id="accordionExample">
    {{!-- style="display:block; width : 0; margin:auto; font-size:1rem" --}}
    <h2 class="mx-2">Tasks to do</h2>

    {{#each Works}}


    <div class="accordion-item">
      <h2 class="accordion-header" id="headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo"
          aria-expanded="false" aria-controls="collapseTwo">
          TITLE : {{this.title}} 
          
           <a href="/ReadMore/{{this.id}}"><button type="button" class="btn btn-info mx-3 my-2 ">Info</button></a>
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
        data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <strong>DESCRIPTION : {{this.description}}</strong>
          <br>
          <strong>DUE ON : {{this.due_date}}</strong>
          <br>
          <strong> COMMENT : {{this.COMMENTS}} </strong>
          {{!-- <code></code> --}}
        </div>

        <form action="/delete/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-primary mx-5 my-2 d-inline">DELETE</button>
        </form>

        <a href="/edit/{{this.id}}"><button type="submit" class="btn btn-primary mx-5 my-2 d-inline">EDIT</button></a>

      </div>
    </div>

