<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

<style>
    .container {
        position: absolute;
        border: 2px solid black;
        border-radius: 7px;
        padding: 7px;
        height: 50%;
        width: 50%;
        margin: auto;

    }

    .buttonClass {
        display: flex;
        justify-content: left;
        align-items: center;

        margin: 5px 0px;
    }

    .container h2 {
        transform: translateX(-98px);
        margin-left: 50%;
    }
</style>

<body>
    <div class="container">
        <h2>TITLE : {{Required_task.title}}</h1>
            <div class="decription">
                description : {{Required_task.description}}
            </div>
            <div class="due_date">
                COMMENTS : {{Required_task.COMMENTS}};
            </div>
            <div class="due_date">
                date : {{Required_task.due_date}};
            </div>

            <div class="buttonClass">
                <form action="/delete/{{Required_task.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-primary mx-3 my-2 d-inline">DELETE</button>
                </form>

                <a href="/edit/{{Required_task.id}}"><button type="submit"
                        class="btn btn-primary mx-3 my-2 d-inline">EDIT</button></a>

                <a href="/"><button type="submit" class="btn btn-primary mx-3 my-2 d-inline">Back to task
                        page</button></a>


            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>


</body>

</html>